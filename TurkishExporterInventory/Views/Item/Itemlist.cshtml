
@model IEnumerable<TurkishExporterInventory.Database.Models.ItemListModel>


@{
    ViewData["Title"] = "Itemlist";
}
<link href="~/css/ItemForms/Itemlist.css" rel="stylesheet" />


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Tüm Eşyalar</h2>

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Ürün Adı</th>
                            <th>Ürün Alım Tarihi</th>
                            <th>Ürün Alım Yeri</th>
                            <th>Ürün Amacı</th>
                            <th>Ürün Fiyatı</th>
                            <th>Tahsis Sayısı</th>
                            <th>Son Teslim</th>
                            <th>Oluşturma Tarihi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.ItemName)</td>
                                <td>@Html.DisplayFor(modelItem => item.ItemBoughtDate)</td>
                                <td>@Html.DisplayFor(modelItem => item.ItemBoughtPlace)</td>
                                <td>@Html.DisplayFor(modelItem => item.ItemPurpose)</td>
                                <td class="text-danger">@Html.DisplayFor(modelItem => item.ItemPrice)</td>
                                <td class="text-primary">@Html.DisplayFor(modelItem => item.ItemOwnersCount)</td>
                                <td>@Html.DisplayFor(modelItem => item.ItemOwnerNameSurname)</td>
                                <td>@Html.DisplayFor(modelItem => item.ItemRecordCreateTime)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



