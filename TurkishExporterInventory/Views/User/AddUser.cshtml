
@{
    ViewData["Title"] = "AddUser";
}
<link href="~/css/UserForms/AddForms.css" rel="stylesheet" />

<div class="container-fluid">

    <div class="row mx-auto main-row">
        <div id="user-create-update-page" class="col-12">
            <div class="card border-dark">
                <div class="card-header bg-primary">
                    <h4 class="m-b-0 text-white form-title">Kullanıcı Bilgileri </h4>
                </div>
                <div class="card-body p-5">
                    <form class="m-t-40" id="user-form">
                        <div class="d-flex">
                            <div class="col">

                                <div class="card border p-3">
                                    <div class="form-group">
                                        <h5>Ad <span class="text-danger">*</span></h5>
                                        <input type="hidden" id="UserNameId" name="UserNameId" class="form-control">
                                        <div class="controls">
                                            @*<input type="text" id="Name" name="minChar" class="form-control" placeholder="Ad Soyad" minlength="4" required data-validation-required-message="Bir değer giriniz">*@
                                            <input type="text" placeholder="Ad" name="Name" class="form-control">

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <h5>Soyad <span class="text-danger">*</span></h5>
                                        <input type="hidden" id="UserLastNameId" name="UserLastNameId" class="form-control">
                                        <div class="controls">
                                            @*<input type="text" id="Surname" name="minChar" class="form-control" placeholder="Ad Soyad" minlength="4" required data-validation-required-message="Bir değer giriniz">*@
                                            <input type="text" placeholder="Soyad" name="Surname" class="form-control">

                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <h5>E-Posta <span class="text-danger">*</span></h5>
                                        <div class="controls">
                                            <input type="text" name="Email" class="form-control user-email" placeholder="E-posta Adresi" data-validation-regex-regex="([a-z0-9_\.-]+)@@([\da-z\.-]+)\.([a-z\.]{2,6})" data-validation-regex-message="Enter Valid Email">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <h5>Departman</h5>
                                        <div class="controls">
                                            <input type="text" name="Email" class="form-control user-email" placeholder="Kullanıcının Departmanını Giriniz">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <h5>Pozisyon </h5>
                                        <div class="controls">
                                            <input type="text" name="Email" class="form-control user-email" placeholder="Kullanıcının Poziyonunu Giriniz">
                                        </div>
                                    </div>


                                    <button type="button" class="ladda-button btn waves-effect waves-light save btn-success mt-4" data-target-operation="disable" data-size="xs" data-color="info"><i class="fa fa-floppy-o"></i> Ekle</button>

                                </div>
                            </div>

                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>





