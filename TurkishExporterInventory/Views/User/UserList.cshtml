@model IEnumerable<TurkishExporterInventory.Database.Models.UserListModel>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/UserForms/Userlist.css" rel="stylesheet" />

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Tüm Kullanıcılar</h4>

                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th> Kullanıcı </th>
                            <th> İsim </th>
                            <th> Departman</th>
                            <th> Pozisyon</th>
                            <th> İlerleme </th>
                            <th> Toplam Ürün</th>
                            <th> Miktar </th>
                            <th> Son Ürün </th>
                            <th> Oluşturma Tarihi </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                        <tr>
                            <td class="py-1">
                                <img src="../../../assets/images/faces-clipart/pic-1.png" alt="image">
                            </td>
                            <td>@Html.DisplayFor(modeluser => user.UserName) @Html.DisplayFor(modeluser => user.UserSurname)</td>
                            <td>@Html.DisplayFor(modeluser => user.UserDepartment)</td>
                            <td>@Html.DisplayFor(modeluser => user.UserPosition)</td>
                            <td>
                                
                                <div class="progress">
                                    <div class="progress-bar bg-success style1" style="width:@(user.UserItemCount*25+"%")" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </td>
                            <td class="text-danger">@Html.DisplayFor(modeluser => user.UserItemCount)</td>
                            <td class="text-primary">@Html.DisplayFor(modeluser => user.UserTotalValue)</td>
                            <td>@Html.DisplayFor(modeluser => user.UserLastItem)</td>
                            <td>@Html.DisplayFor(modeluser => user.UserRecordCreateTime)</td>
                        </tr>
                        }

                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

