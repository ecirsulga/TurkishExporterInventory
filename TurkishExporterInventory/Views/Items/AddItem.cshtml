@model TurkishExporterInventory.Database.Models.Item
@{
    ViewData["Title"] = "ItemAdd";
}

<link href="~/css/UserForms/AddForms.css" rel="stylesheet" />

<div class="container-fluid">

    <div class="row mx-auto main-row">
        <div id="user-create-update-page" class="col-12">
            <div class="card border-dark">
                <div class="card-header bg-primary">
                    <h4 class="m-b-0 text-white form-title">Eşya Bilgileri</h4>
                </div>
                <div class="card-body p-5">
                    <form asp-action="AddItem" class="m-t-40" id="user-form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="d-flex">
                            <div class="col">

                                <div class="card border p-3">
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label add-form-titles">Isim</label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Purpose" class="control-label add-form-titles">Alım Amacı</label>
                                        <input asp-for="Purpose" class="form-control" />
                                        <span asp-validation-for="Purpose" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="BuyingDate" class="control-label add-form-titles">Alım Tarihi</label>
                                        <input asp-for="BuyingDate" class="form-control" />
                                        <span asp-validation-for="BuyingDate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="rlt_Supplier_Id" class="control-label"></label>
                                        <select asp-for="rlt_Supplier_Id" class="form-control" asp-items="ViewBag.rlt_Supplier_Id"></select>
                                    </div>
                                    <div class="form-group">
                                        <h5>Eşya Fiyatı <span class="text-danger">*</span></h5>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">₺</span>
                                            </div>

                                            <input asp-for="PriceTL" class="form-control" aria-label="Ortalama Fiyat" />
                                            <span asp-validation-for="PriceTL" class="text-danger"></span>
                                            <div class="input-group-append">
                                                <span class="input-group-text">.00</span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-4">
                                        <div class="md-form">
                                            <div class="file-field">
                                                <div class="mb-4">
                                                    <img src="https://www.ispartakulegayrimenkul.com/uploads/thumb/default_ilan_resim.jpg"
                                                         class="rounded-circle z-depth-1-half avatar-pic w-75" alt="example placeholder avatar">
                                                </div>
                                                <div class="d-flex justify-content-center">
                                                    <input type="file">

                                                </div>
                                            </div>
                                        </div>

                                    </div>


                                    <button type="submit" value="AddItem" class="ladda-button btn waves-effect waves-light save btn-success mt-4" data-target-operation="disable" data-size="xs" data-color="info"><i class="fa fa-floppy-o"></i> Ekle</button>

                                </div>
                            </div>


                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

