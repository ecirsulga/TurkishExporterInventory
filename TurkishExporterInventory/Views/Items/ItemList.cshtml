
@model IEnumerable<TurkishExporterInventory.Database.Models.ItemListModel>


@{
    ViewData["Title"] = "Itemlist";
}
<link href="~/css/ItemForms/Itemlist.css" rel="stylesheet" />


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">

        <div class="card-body">
            <h4 class="card-title">Table with contextual classes</h4>
            <p class="card-description"> Add class <code>.table-{color}</code> </p>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> Ürün Adı </th>
                        <th> Ürün Alım Yeri </th>
                        <th> Tahsis Sayısı </th>
                        <th> Ürün Fiyatı </th>
                        <th> Ürün Alım Tarihi </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                     
                    <tr class="table-primary">
                        <td> 1 </td>
                        <td> @Html.DisplayFor(modelItem => item.Name) </td>
                        <td> @Html.DisplayFor(modelItem => item.BoughtPlace) </td>
                        <td> @Html.DisplayFor(modelItem => item.ItemOwnersCount) </td>
                        <td> ₺@Html.DisplayFor(modelItem => item.Price) </td>
                        <td> @Html.DisplayFor(modelItem => item.BoughtDate) </td>
                    </tr>
                    
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




