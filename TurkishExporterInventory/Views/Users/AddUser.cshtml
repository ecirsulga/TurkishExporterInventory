@model TurkishExporterInventory.Database.Models.User
@{
    ViewData["Title"] = "AddUser";
}
<link href="~/css/UserForms/AddForms.css" rel="stylesheet" />

<div class="container-fluid">

    <div class="row mx-auto main-row">
        <div id="user-create-update-page" class="col-12">
            <div class="card border-dark">
                <div class="card-header bg-primary">
                    <h4 class="m-b-0 text-white form-title">Kullanıcı Bilgileri </h4>
                </div>
                <div class="card-body p-5">
                    <form class="m-t-40" id="user-form" asp-action="AddUser">

                        <div class="d-flex">
                            <div class="col">

                                <div class="card border p-3">
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Surname" class="control-label"></label>
                                        <input asp-for="Surname" class="form-control" />
                                        <span asp-validation-for="Surname" class="text-danger"></span>
                                    </div>


                                    <div class="form-group">
                                        <label asp-for="Department" class="control-label"></label>
                                        <input asp-for="Department" class="form-control" />
                                        <span asp-validation-for="Department" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Position" class="control-label"></label>
                                        <input asp-for="Position" class="form-control" />
                                        <span asp-validation-for="Position" class="text-danger"></span>
                                    </div>


                                    <button type="submit" value="AddUser" class="ladda-button btn waves-effect waves-light save btn-success mt-4" data-target-operation="disable" data-size="xs" data-color="info"><i class="fa fa-floppy-o"></i> Ekle</button>
                                    

                                    
                                </div>
                            </div>

                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>





